{
  "apps": [{
      "name": "myserver",
      "cwd": "./",
      "script": "./src/main.js",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./log/error.log",
      "out_file": "./log/out.log",
      "pid_file": "./log/node-geo-api.pid",
      "instances": 3,
      "min_uptime": "200s",
      "max_restarts": 10,
      "max_memory_restart": "600M",
      "cron_restart": "1 0 * * *",
      "watch": "./src",
      "merge_logs": true,
      "exec_interpreter": "node",
      "exec_mode": "fork",
      "autorestart": false,
      "vizion": false
  }]
}
